import tkinter as tk
import customtkinter as ctk
from PIL import Image, ImageTk

input_data = []

def submit_answer():
    global current_question_index

    # Save, process, or print the answer.
    current_answer = answer_entry.get()
    print(f"{questions[current_question_index]['text']}: {current_answer}")
    input_data.append(int(current_answer))
#     print(input_data)

    # Move to the next question
    current_question_index += 1
    if current_question_index < len(questions):
        display_question()
    else:
        # All questions answered
        display_recommendations()

def display_question():
    # Clear previous question and input
    question_label.config(text=questions[current_question_index]['text'])
    answer_entry.delete(0, tk.END)  # Clear the entry field

def print_input_data():
    input_data[1] = input_data[1]/10
    print(input_data)
    

def display_recommendations():
    # Clear the screen
    question_label.place_forget()
    answer_entry.place_forget()
    btn.place_forget()

    # Display recommendations text
    recommendations_label = tk.Label(root, text="Products for you:", font=("Helvetics", 50), wraplength=1600, justify='center')
    recommendations_label.place(relx=0.5, rely=0.2, anchor='c')
    
    desired_width, desired_height = 300, 300

    # Load and display images
    img1 = Image.open("iphone12.jpeg")
    img1 = img1.resize((desired_width, desired_height))
    img1 = ImageTk.PhotoImage(img1)
    
    img_label1 = tk.Label(root, image=img1)
    img_label1.image = img1
    img_label1.place(relx=0.25, rely=0.6, anchor='c')

    # Load and resize the second image
    img2 = Image.open("iphone13.jpeg")
    img2 = img2.resize((desired_width, desired_height))
    img2 = ImageTk.PhotoImage(img2)
    
    img_label2 = tk.Label(root, image=img2)
    img_label2.image = img2
    img_label2.place(relx=0.5, rely=0.6, anchor='c')

    # Load and resize the third image
    img3 = Image.open("iphone14.jpg")
    img3 = img3.resize((desired_width, desired_height))
    img3 = ImageTk.PhotoImage(img3)
    
    img_label3 = tk.Label(root, image=img3)
    img_label3.image = img3
    img_label3.place(relx=0.75, rely=0.6, anchor='c')
    
    print_input_data()

root = tk.Tk()
root.title("Text Input Questions")
root.geometry("1920x1080")

# Bind the Enter key to the submit_answer function
root.bind('<Return>', lambda event=None: submit_answer())

# Sample questions
questions = [
     {"text": "How much is the user spending per month? \n (Numerical values only)", "value": ""},
     {"text": "How tech-savvy is the user consider yourself? \n On a scale of 0-10: 0 being you know nothing about technology", "value": ""},
     {"text": "How old is the user? \n (Has to be 18 and above)", "value": ""},
     {"text": "How long has the user been with Verizon? \n (Numerical values only)", "value": ""},
     {"text": "How satisfied is the user with their current plan? \n On a scale of 0-10: 0 being you are not satisfied at all (Numerical values only)", "value": ""},
     {"text": "How many people are under their plan? \n (Numerical values only)", "value": ""},
     {"text": "What is the users current plan? \n 1 - budget plan; 2 - standard plan; 3 - luxury plan (Numerical values only)", "value": ""}
]

current_question_index = 0

# Set up a label to display the question with larger font
question_label = tk.Label(root, text="", font=("Helvetics", 40))
question_label.place(relx=0.5, rely=0.4, anchor='c')

# Set up the input field for user answers
answer_entry = tk.Entry(root, font=("Arial", 16), width=30)
answer_entry.place(relx=0.5, rely=0.5, anchor='c')

# Display the first question initially
display_question()

# Button to submit answer and display next question
btn = ctk.CTkButton(root, text="Submit", command=submit_answer, font=("Arial", 16))
btn.place(relx=0.5, rely=0.6, anchor='c')


root.mainloop()
