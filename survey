import tkinter as tk
import customtkinter as ctk
from PIL import Image, ImageTk

def submit_answer():
    global current_question_index

    # Save, process, or print the answer.
    print(f"{questions[current_question_index]['text']}: {answer_entry.get()}")

    # Move to the next question
    current_question_index += 1
    if current_question_index < len(questions):
        display_question()
    else:
        # All questions answered
        display_recommendations()

def display_question():
    # Clear previous question and input
    question_label.config(text=questions[current_question_index]['text'])
    answer_entry.delete(0, tk.END)  # Clear the entry field

def display_recommendations():
    # Clear the screen
    question_label.place_forget()
    answer_entry.place_forget()
    btn.place_forget()
    if hasattr(scale_widget, "place_forget"):
        scale_widget.place_forget()

    # Display recommendations text
    recommendations_label = tk.Label(root, text="Based on your results, here are your top recommendations from Verizon:", font=("Arial", 24), wraplength=1600, justify='center')
    recommendations_label.place(relx=0.5, rely=0.2, anchor='c')

    # Load and display images
    img1 = ImageTk.PhotoImage(Image.open("iphone12.jpeg")) # replace with your image path
    img_label1 = tk.Label(root, image=img1)
    img_label1.image = img1
    img_label1.place(relx=0.25, rely=0.5, anchor='c')

    img2 = ImageTk.PhotoImage(Image.open("iphone13.jpeg")) # replace with your image path
    img_label2 = tk.Label(root, image=img2)
    img_label2.image = img2
    img_label2.place(relx=0.5, rely=0.5, anchor='c')

    img3 = ImageTk.PhotoImage(Image.open("iphone14.jpg")) # replace with your image path
    img_label3 = tk.Label(root, image=img3)
    img_label3.image = img3
    img_label3.place(relx=0.75, rely=0.5, anchor='c')

root = tk.Tk()
root.title("Text Input Questions")
root.geometry("1920x1080")

# Bind the Enter key to the submit_answer function
root.bind('<Return>', lambda event=None: submit_answer())

try:
    scale_widget
except NameError:
    scale_widget = tk.Scale(root, from_=1, to_=5, orient=tk.HORIZONTAL, font=("Arial", 16), sliderlength=20, length=300)
# Sample questions
questions = [
     {"text": "How much money are you willing to spend?", "value": ""},
    {"text": "How tech-savvy would you consider yourself? \n On a scale of 1-5: 1 being you know nothing about technology", "value": ""},
    {"text": "How old are you?", "value": ""},
    {"text": "How long have you been with the company?", "value": ""},
    {"text": "How satisfied are you with your current plan?", "value": ""},
    {"text": "How many people are buying for?", "value": ""}
]

current_question_index = 0

# Set up a label to display the question with larger font
question_label = tk.Label(root, text="", font=("Arial", 24))
question_label.place(relx=0.5, rely=0.4, anchor='c')

# Set up the input field for user answers
answer_entry = tk.Entry(root, font=("Arial", 16), width=30)
answer_entry.place(relx=0.5, rely=0.5, anchor='c')

# Display the first question initially
display_question()

# Button to submit answer and display next question
btn = ctk.CTkButton(root, text="Submit", command=submit_answer, font=("Arial", 16))
btn.place(relx=0.5, rely=0.6, anchor='c')

root.mainloop()
